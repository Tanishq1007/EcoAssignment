{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // Include libraries for TypeScript
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking for all declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit output
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "module": "esnext", // Specify module code generation
    "moduleResolution": "bundler", // Module resolution strategy
    "resolveJsonModule": true, // Include modules imported with .json extension
    "isolatedModules": true, // Ensure that each file can be safely transpiled independently
    "jsx": "preserve", // Preserve JSX syntax; Next.js handles it
    "incremental": true, // Enable incremental compilation
    "plugins": [
      {
        "name": "next" // Next.js plugin for TypeScript
      }
    ],
    "paths": {
      "@/*": ["./src/*"] // Short path alias for the src directory
    }
  },
  "include": [
    "next-env.d.ts", // Include the Next.js type definitions
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TypeScript JSX files
    ".next/types/**/*.ts" // Include type definitions generated by Next.js
  ],
  "exclude": [
    "node_modules", // Exclude node_modules from compilation
    ".next" // Exclude the .next build directory
  ]
}
